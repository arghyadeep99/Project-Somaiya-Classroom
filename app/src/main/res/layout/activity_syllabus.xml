<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Syllabus"
    android:background="@drawable/gradient_color">

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Content"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="#404040"
        app:fontFamily="@font/roboto_slab"
        android:textStyle="bold"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#202020">


        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Chapter 1."
                android:padding="3dip"
                android:textSize="18sp"
                android:textColor="#404040"
                app:fontFamily="@font/roboto_slab"/>

            <TextView
                android:text="Introduction to C"
                android:gravity="left"
                android:padding="3dip"
                android:textSize="18sp"
                android:textColor="#404040"
                app:fontFamily="@font/roboto_slab"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dip"
                />
            <TextView
                android:text=""
                android:gravity="left"
                android:padding="3dip"
                android:textSize="18sp"
                android:textColor="#404040"
                app:fontFamily="@font/roboto_slab"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Chapter 2."
                android:padding="3dip"
                android:textSize="18sp"
                android:textColor="#404040"
                app:fontFamily="@font/roboto_slab"/>
            <TextView
                android:text="Basic Operators"
                android:gravity="left"
                android:padding="3dip"
                android:textSize="18sp"
                android:textColor="#404040"
                app:fontFamily="@font/roboto_slab"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Chapter 3."
                android:padding="3dip"
                android:textSize="18sp"
                android:textColor="#404040"
                app:fontFamily="@font/roboto_slab"/>
            <TextView
                android:text="Control Structures "
                android:gravity="left"
                android:padding="3dip"
                android:textSize="18sp"
                android:textColor="#404040"
                app:fontFamily="@font/roboto_slab"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Chapter 4."
                android:padding="3dip"
                android:textSize="18sp"
                android:textColor="#404040"
                app:fontFamily="@font/roboto_slab"/>
            <TextView
                android:text="Arrays and Structures"
                android:gravity="left"
                android:padding="3dip"
                android:textSize="18sp"
                android:textColor="#404040"
                app:fontFamily="@font/roboto_slab"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dip" />

        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Chapter 5."
                android:padding="3dip"
                android:textSize="18sp"
                android:textColor="#404040"
                app:fontFamily="@font/roboto_slab"/>
            <TextView
                android:text="User Defined Functions"
                android:gravity="left"
                android:padding="3dip"
                android:textSize="18sp"
                android:textColor="#404040"
                app:fontFamily="@font/roboto_slab"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dip" />

        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Chapter 6."
                android:padding="3dip"
                android:textSize="18sp"
                android:textColor="#404040"
                app:fontFamily="@font/roboto_slab"/>
            <TextView
                android:text="Pointers and Files"
                android:gravity="left"
                android:padding="3dip"
                android:textSize="18sp"
                android:textColor="#404040"
                app:fontFamily="@font/roboto_slab"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_column="1"
                android:padding="3dip" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="    Upload Detailed Syllabus   "
        android:background="@drawable/button_shape"
        android:textSize="18sp"
        android:textColor="#ffff"
        android:inputType="text"
        android:onClick="open_upload"
        app:fontFamily="@font/roboto_slab"/>
</LinearLayout>